@page "/settings"
@using static HatchPatchWeb2.Models.DataConstants

<MudContainer style="position: relative;">
    <MudOverlay Visible="@loading" Absolute="true">
        <MudProgressCircular Indeterminate="true" Color="Color.Secondary" />
    </MudOverlay>
    <MudPaper>
        <MudPaper>
            <MudText>Please Note: When customizing the lists below, upload text files with each entry on a new line. </MudText>
        </MudPaper>
        <MudExpansionPanels MultiExpansion="true">
            <MudExpansionPanel IsInitiallyExpanded="true">
                <TitleContent>
                    <MudText Typo="Typo.h5">
                        Adjective Lists
                    </MudText>
                </TitleContent>
                <ChildContent>
                    <MudExpansionPanels>
                        <HatchPatchWeb2.Components.ListEditorRow TItem="AdjectiveLists" OptionFor="AdjectiveLists.USER_ONE" 
                            OptionName="User One" Options="@(AdjectiveListUserOne)" UpdateAction=@(async (f, t) => await UpdateActionForAdjectiveListsAsync(f, t))/>
                        <HatchPatchWeb2.Components.ListEditorRow TItem="AdjectiveLists" OptionFor="AdjectiveLists.USER_TWO" 
                            OptionName="User Two" Options="@(AdjectiveListUserTwo)" UpdateAction=@(async (f, t) => await UpdateActionForAdjectiveListsAsync(f, t))/>
                    </MudExpansionPanels>
                </ChildContent>
            </MudExpansionPanel>

            <MudExpansionPanel>
                <TitleContent>
                    <MudText Typo="Typo.h5">
                        Synth Lists
                    </MudText>
                </TitleContent>
                <ChildContent>
                <MudExpansionPanels>
                    <HatchPatchWeb2.Components.ListEditorRow TItem="SynthLists" OptionFor="SynthLists.USER_ONE" 
                        OptionName="User One" Options="@(SynthListUserOne)" UpdateAction=@(async (f, t) => await UpdateActionForSynthListsAsync(f, t))/>
                     <HatchPatchWeb2.Components.ListEditorRow TItem="SynthLists" OptionFor="SynthLists.USER_TWO" 
                        OptionName="User Two" Options="@(SynthListUserTwo)" UpdateAction=@(async (f, t) => await UpdateActionForSynthListsAsync(f, t))/>
                </MudExpansionPanels>
                </ChildContent>
            </MudExpansionPanel>
        </MudExpansionPanels>
    </MudPaper>
</MudContainer>