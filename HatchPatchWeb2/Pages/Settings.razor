@page "/settings"
@using static HatchPatchWeb2.Models.DataConstants

<MudContainer style="position: relative;">
    <MudOverlay Visible="@loading" Absolute="true">
        <MudProgressCircular Indeterminate="true" Color="Color.Secondary" />
    </MudOverlay>
    <MudPaper>
        <MudPaper>
            <MudText>Please Note: When customizing the lists below, upload text files with each entry on a new line. </MudText>
        </MudPaper>
        <MudExpansionPanels MultiExpansion="true">
            <MudExpansionPanel IsInitiallyExpanded="true">
                <TitleContent>
                    <MudText Typo="Typo.h5">
                        Adjective Lists
                    </MudText>
                </TitleContent>
                <ChildContent>
                <MudGrid>
                    <HatchPatchWeb2.Components.ListEditorRow TItem="AdjectiveLists" OptionFor="AdjectiveLists.USER_ONE" 
                     OptionName="User One" OptionsPreview="@(GetPreviewListFor(AdjectiveListUserOne))" UpdateAction=@(async (f, t) => await UpdateActionForAdjectiveListsAsync(f, t))/>

                     <MudDivider Class="my-2" />

                     <HatchPatchWeb2.Components.ListEditorRow TItem="AdjectiveLists" OptionFor="AdjectiveLists.USER_TWO" 
                     OptionName="User Two" OptionsPreview="@(GetPreviewListFor(AdjectiveListUserTwo))" UpdateAction=@(async (f, t) => await UpdateActionForAdjectiveListsAsync(f, t))/>

                </MudGrid>
                </ChildContent>
            </MudExpansionPanel>

            <MudExpansionPanel>
                <TitleContent>
                    <MudText Typo="Typo.h5">
                        Synth Lists
                    </MudText>
                </TitleContent>
                <ChildContent>
                <MudGrid>
                    <HatchPatchWeb2.Components.ListEditorRow TItem="SynthLists" OptionFor="SynthLists.USER_ONE" 
                     OptionName="User One" OptionsPreview="@(GetPreviewListFor(SynthListUserOne))" UpdateAction=@(async (f, t) => await UpdateActionForSynthListsAsync(f, t))/>

                     <MudDivider Class="my-2" />

                     <HatchPatchWeb2.Components.ListEditorRow TItem="SynthLists" OptionFor="SynthLists.USER_TWO" 
                     OptionName="User Two" OptionsPreview="@(GetPreviewListFor(SynthListUserTwo))" UpdateAction=@(async (f, t) => await UpdateActionForSynthListsAsync(f, t))/>

                </MudGrid>
                </ChildContent>
            </MudExpansionPanel>
        </MudExpansionPanels>
    </MudPaper>
</MudContainer>